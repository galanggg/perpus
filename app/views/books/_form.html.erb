<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-12 col-lg-6 offset-lg-3">
        <h1 className="font-weight-normal mb-5"> Add Buku.</h1>
        <div class="form-group">
          <%= label_tag :judul_buku, "judul buku" %>
          <%= text_field_tag :judul_buku,nil,class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :author, "Pengarang" %>
          <%= text_field_tag :author,nil,class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :genre_buku, "Genre Buku" %>
          <%= text_field_tag :genre_buku,nil,class: 'form-control' %>
        </div>
        <div class="field">
          <%= form.label :rating %>
          <%= form.number_field :rating %>
        </div>
      <div class="btn custom-button mt-3">
        <%= submit_tag %>
      </div>
      <div class="btn btn-link mt-3">
      <%= link_to 'Back',books_path%>
      </div>
    </div>
  </div>
</div>

<% end %>